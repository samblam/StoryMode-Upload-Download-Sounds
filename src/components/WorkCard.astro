---
interface Props {
  title: string;
  client: string;
  description: string;
  imageUrl: string;
}

const { title, client, description, imageUrl } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
  <img src={imageUrl} alt={title} class="w-full h-64 object-cover">
  <div class="p-6">
    <h3 class="text-2xl font-editorial mb-2">{title}</h3>
    <p class="text-lg text-gray-600 mb-2">{client}</p>
    <p class="text-gray-700">{description}</p>
  </div>
</div>